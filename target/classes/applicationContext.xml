<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- DAO Beans -->
    <bean id="itemDao" class="com.apc.inventory.dao.ItemDao"/>
    <bean id="invoiceDao" class="com.apc.billing.dao.InvoiceDao"/>
    <bean id="purchaseDao" class="com.apc.purchase.PurchaseDao"/>
    <bean id="userDao" class="com.apc.auth.UserDao"/>

    <!-- Service Beans with property injection -->
    <bean id="inventoryService" class="com.apc.inventory.service.InventoryService">
        <property name="itemDao" ref="itemDao"/>
    </bean>
    <bean id="billingService" class="com.apc.billing.service.BillingService">
        <property name="invoiceDao" ref="invoiceDao"/>
    </bean>
    <bean id="authService" class="com.apc.auth.AuthService">
        <property name="userDao" ref="userDao"/>
    </bean>
    <bean id="purchaseService" class="com.apc.purchase.PurchaseService">
        <property name="purchaseDao" ref="purchaseDao"/>
    </bean>

</beans>
